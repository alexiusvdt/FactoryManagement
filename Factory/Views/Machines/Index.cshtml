@{
  Layout = "_Layout";
}

@using Factory.Models

<div class="Machines">
@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 
else
{
  <ul class="list-group">
    @foreach (Machine machine in Model)
    {
      <li class="list-group-item">@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
    }
  </ul>
}
<br>
</div>